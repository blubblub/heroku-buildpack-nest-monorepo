#!/usr/bin/env bash

# Ensure wildcards in globs match dotfiles too.
shopt -s dotglob

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/apps/NEST_APP" ]; then
    echo "NEST_APP was not set: ${NEST_APP}. Aborting. Ensure NestJS app is in apps directory." | indent
    exit 1
fi

NEST_APP_DIR="$(cat "${ENV_DIR}/apps/NEST_APP")"

(
    cp -r "${BUILD_DIR}/${NEST_APP_DIR}" "${BUILD_DIR}/"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "Set up ${NEST_APP} at the root of Heroku app successfully" | indent

